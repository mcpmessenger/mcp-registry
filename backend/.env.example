# Database Configuration
DATABASE_URL=file:./dev.db

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Google API Configuration
GOOGLE_VISION_API_KEY=your_google_vision_api_key
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key
GEMINI_MODEL_NAME=gemini-1.5-flash

# Kafka Configuration (Legacy - being phased out)
ENABLE_KAFKA=false
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=mcp-orchestrator-coordinator
KAFKA_GROUP_ID=mcp-orchestrator-coordinator

# Pulsar Configuration
ENABLE_PULSAR=true
PULSAR_SERVICE_URL=pulsar://localhost:6650
PULSAR_HTTP_URL=http://localhost:8080
PULSAR_NAMESPACE=mcp-core/default

# Pulsar Topics
PULSAR_TOPIC_REGISTRATIONS=registrations/global
PULSAR_TOPIC_SESSIONS=sessions
PULSAR_TOPIC_ACTIVITY=events/activity
PULSAR_TOPIC_USER_REQUESTS=user-requests
PULSAR_TOPIC_TOOL_SIGNALS=tool-signals
PULSAR_TOPIC_TOOL_SIGNALS_RETRY_5S=tool-signals-retry-5s
PULSAR_TOPIC_TOOL_SIGNALS_RETRY_30S=tool-signals-retry-30s
PULSAR_TOPIC_TOOL_SIGNALS_DLQ=tool-signals-dlq
PULSAR_TOPIC_ORCHESTRATOR_PLANS=orchestrator-plans
PULSAR_TOPIC_ORCHESTRATOR_RESULTS=orchestrator-results

# MCP Streamable HTTP Configuration
MCP_SESSION_TTL=3600
MCP_ALLOWED_ORIGINS=http://localhost:3000
MCP_PROTOCOL_VERSION=2025-03-26
